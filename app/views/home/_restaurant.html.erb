<p>Seus produtos, <%= current_user.restaurant.name %></p>
<table>
  <thead>
    <th>Nome</th>
    <th>Valor</th>
  </thead>
  <tbody>
    <% current_user.restaurant.products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.value %></td>
    </tr>
    <% end %>
  </tbody>
</table>
